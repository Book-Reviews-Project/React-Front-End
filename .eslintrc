{
  "env": {
      "es6": true,
      "node": true
  },
  "extends":  [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "jsx-a11y"
  ],
  "rules": {
      "indent": [
          "error",
          "tab"
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}